<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="se.dsve.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="20" vgap="20">

    <TextField fx:id="inputField"
               GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4"
               onKeyReleased="#handleKeyReleased"/>

    <Button fx:id="button7" text="7"
            GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button8" text="8"
            GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button9" text="9"
            GridPane.rowIndex="1" GridPane.columnIndex="2"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="buttonDivision" text="/"
            GridPane.rowIndex="1" GridPane.columnIndex="3"
            onAction="#onButtonInputClick" prefWidth="30"/>

    <Button fx:id="button4" text="4"
            GridPane.rowIndex="2" GridPane.columnIndex="0"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button5" text="5"
            GridPane.rowIndex="2" GridPane.columnIndex="1"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button6" text="6"
            GridPane.rowIndex="2" GridPane.columnIndex="2"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="buttonMultiply" text="*"
            GridPane.rowIndex="2" GridPane.columnIndex="3"
            onAction="#onButtonInputClick" prefWidth="30"/>

    <Button fx:id="button1" text="1"
            GridPane.rowIndex="3" GridPane.columnIndex="0"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button2" text="2"
            GridPane.rowIndex="3" GridPane.columnIndex="1"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="button3" text="3"
            GridPane.rowIndex="3" GridPane.columnIndex="2"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="buttonSubtraction" text="-"
            GridPane.rowIndex="3" GridPane.columnIndex="3"
            onAction="#onButtonInputClick" prefWidth="30"/>

    <Button fx:id="button0" text="0"
            GridPane.rowIndex="4" GridPane.columnIndex="1"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="buttonComma" text="."
            GridPane.rowIndex="4" GridPane.columnIndex="2"
            onAction="#onButtonInputClick" prefWidth="30"/>
    <Button fx:id="buttonAddition" text="+"
            GridPane.rowIndex="4" GridPane.columnIndex="3"
            onAction="#onButtonInputClick" prefWidth="30"/>

    <Button fx:id="buttonResult" text="Show result"
            GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.columnSpan="2"
            onAction="#onButtonEventClick"/>

    <Button fx:id="buttonClear" text="Clear"
            GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.columnSpan="2"
            onAction="#onButtonEventClick"/>

    <Label fx:id="dsve" text="dsve.se" alignment="BOTTOM_RIGHT"
           GridPane.rowIndex="7" GridPane.columnIndex="2" GridPane.columnSpan="2"/>


</GridPane>